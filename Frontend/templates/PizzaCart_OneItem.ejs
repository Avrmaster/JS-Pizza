<div class="pizza-cart-item">

    <span class="title">
        <%= pizza.title %> (<%=size_name%>)
    </span>

    <div class="diameter-mass">
        <img class="sizeImg" src="../assets/images/size-icon.svg"/>
        <%=diameter%>
        <img class="weightImg" src="../assets/images/weight.svg"/>
        <%=weight%>
    </div>

    <div class="cart-buttons-holder">
        <b><%= price %> грн.</b>
        <% if (editable) { %>
        <button class="btn btn-danger minus"><b>-</b></button>
        <% } %>
        <span class="label label-default quantity"><%= quantity %></span>
        <% if (editable) { %>
        <button class="btn btn-success plus"><b>+</b></button>
        <button class="btn btn-default delete"><b>x</b></button>
        <% } %>
    </div>

    <img class="preview-img" src="<%=pizza.icon%>"/>

</div>